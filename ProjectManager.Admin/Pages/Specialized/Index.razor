@page "/Specialized/Index"
@inherits IndexBase

@if (@isLoading)
{
    <TemplatedLoading />
}
<div class="box-form">
    <RadzenTemplateForm TItem="PagingRequest" Data="@request" Submit="@OnSearch">
        <div class="search-form">
            <div class="col-sm-4 term-box-title-left">
                <h3 class="box-title">Quản lý hội đồng</h3>
            </div>
            <div class="col-sm-8 term-box-title-right">
                <RadzenButton class="btn btn-success btn-add-form float-right" Style="margin: 25px 15px;" Click="@(args => ShowModal(new SpecializedViewModel()))">
                    <RadzenIcon Icon="add_circle_outline" class="material-icons-custom" />Thêm mới
                </RadzenButton>
                @*<RadzenButton type="submit" class="btn btn-success btn-search-form float-right margin-left-10 margin-right-10">
                    <RadzenIcon Icon="search" class="material-icons-custom" />Tìm kiếm
                </RadzenButton>
                <RadzenTextBox class="float-right term-name-search-textbox" Placeholder="Tên hội đồng..." @bind-Value="@request.SearchText" />*@

            </div>
        </div>
    </RadzenTemplateForm>
    <div class="clearfix"></div>
    <RadzenDataGrid class="radzen-data-grid table-form"
                    ColumnWidth="300px"
                    AllowFiltering="false"
                    AllowColumnResize="true"
                    FilterMode="FilterMode.Advanced"
                    AllowPaging="true"
                    AllowSorting="false"
                    TItem="SpecializedViewModel"
                    LogicalFilterOperator="LogicalFilterOperator.Or"
                    Count="@count"
                    Data="@data"
                    LoadData="@LoadData"
                    PageSize="@pageSize"
                    @ref="grid">
        <Columns>
            <RadzenDataGridColumn Width="85px" TItem="SpecializedViewModel" Title="Chức năng" Frozen="true" TextAlign="TextAlign.Center">
                <Template Context="data">
                    <RadzenButton class="btn btn-grid-edit" title="Sửa dữ liệu" Click="@(args => ShowModal(data))">
                        <RadzenIcon Icon="create" class="material-icons-custom" />
                    </RadzenButton>
                    <RadzenButton class="btn btn-grid-delete" title="Xóa dữ liệu" Click="@(args => ShowModalDelete(data.Id))">
                        <RadzenIcon Icon="delete_forever" class="material-icons-custom" />
                    </RadzenButton>
                    @*<RadzenButton class="btn btn-grid-view-student" title="Xem danh sách giảng viên" Click="@(args => ShowModalViewTeacher(data.Id))">
                    <RadzenIcon Icon="visibility" class="material-icons-custom" />
                    </RadzenButton>*@
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn Width="100px" TItem="SpecializedViewModel" Property="ID_Specialized" Title="Mã hội đồng" />
            <RadzenDataGridColumn Width="100px" TItem="SpecializedViewModel" Property="Name" Title="Tên hội đồng" />
            <RadzenDataGridColumn Width="100px" TItem="SpecializedViewModel" Property="CT" Title="Chủ tịch" />
            <RadzenDataGridColumn Width="200px" TItem="SpecializedViewModel" Property="TK" Title="Thư ký"/>
            <RadzenDataGridColumn Width="200px" TItem="SpecializedViewModel" Property="UV" Title="Uỷ viên" />
            <RadzenDataGridColumn Width="200px" TItem="SpecializedViewModel" Property="GV" Title="Giảng viên phản biện" />
        </Columns>
    </RadzenDataGrid>
</div>
